<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Card name</th>
      <th>Card fname</th>
      <th>Card middleinit</th>
      <th>Card lname</th>
      <th>Exp date</th>
      <th>Card number</th>
      <th>Security code</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.card_name %></td>
        <td><%= payment.card_fname %></td>
        <td><%= payment.card_middleInit %></td>
        <td><%= payment.card_lname %></td>
        <td><%= payment.exp_date %></td>
        <td><%= payment.card_number %></td>
        <td><%= payment.security_code %></td>
        <td><%= payment.payment_id %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

